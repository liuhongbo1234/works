<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@drawable/gray_drawable"
    android:orientation="vertical"
    tools:context=".MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_centerVertical="true"
        android:layout_weight="1.4">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dip"
            android:layout_centerInParent="true">

            <com.xiaomi.mi_deepclean.widget.ArcProgress
                android:id="@+id/arc_store"
                android:layout_width="180dp"
                android:layout_height="180dp"
                custom:arc_bottom_text_size="18dip"
                custom:arc_progress="10"
                custom:arc_stroke_width="8dip"
                custom:arc_text_color="#ffffff"
                custom:arc_text_size="32dip" />
            <!--                custom:arc_bottom_text="点击清理"-->


            <TextView
                android:id="@+id/capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="55dip"
                android:text="20/30"
                android:textColor="@color/white"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/beginclean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dip"
                android:text="点击查看"
                android:textColor="@color/white"
                android:textSize="23dip" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>